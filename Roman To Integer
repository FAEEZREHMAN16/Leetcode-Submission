#include <string.h>

int value(char r) {
    switch (r) {
        case 'I': return 1;
        case 'V': return 5;
        case 'X': return 10;
        case 'L': return 50;
        case 'C': return 100;
        case 'D': return 500;
        case 'M': return 1000;
        default: return 0;
    }
}

int romanToInt(char * s) {
    int sum = 0;

    for (int i = 0; i < strlen(s); i++) {
        int current = value(s[i]);
        int next = value(s[i + 1]);

        if (current < next)
            sum -= current;  
        else
            sum += current;  
    }

    return sum;
}
